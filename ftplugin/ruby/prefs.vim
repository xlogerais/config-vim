" show cursor
setlocal cursorline cursorcolumn

" show line numbers
setlocal number numberwidth=4

" show matching parentheses
setlocal showmatch

" indent
setlocal autoindent cindent smartindent

" tabs
setlocal tabstop=2
setlocal shiftwidth=2

" use space instead of tabs
setlocal expandtab

